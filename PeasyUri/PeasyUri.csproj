<Project Sdk="MSBuild.Sdk.Extras/3.0.44">

  <PropertyGroup>
    <TargetFrameworks>net40-client;netstandard2.0;net6.0</TargetFrameworks>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
	  <LangVersion>10</LangVersion>
	  <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	  <Copyright>Pascal Craponne</Copyright>
	  <PackageProjectUrl>https://github.com/picrap/PeasyUri</PackageProjectUrl>
	  <PackageReadmeFile>README.md</PackageReadmeFile>
	  <RepositoryUrl>https://github.com/picrap/PeasyUri.git</RepositoryUrl>
	  <RepositoryType>git</RepositoryType>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
	  <SignAssembly>True</SignAssembly>
	  <AssemblyOriginatorKeyFile>PeasyUri.snk</AssemblyOriginatorKeyFile>
	  <VersionPrefix>0.1</VersionPrefix>
	  <PackageTags>RFC3986 URI parser</PackageTags>
	  <PackageIcon>PeasyUri.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\Icon\PeasyUri.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
